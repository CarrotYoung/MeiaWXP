<view class="body">

  <view class="header">
    <image class="logo-img" src="{{ixdcLogoIc}}"></image>
    <text class="login-hint">{{unLoginTxt}}</text>
  </view>

  <view class='login-info'>
    <input id='usernameInput' class='login-input' focus confirm-type="next"
    bindconfirm="focusNext" bindinput='infoInput' placeholder='{{usernameHint}}' placeholder-class='placeholder-input'></input>
    <view class='border-line'></view>
    <input id='passwordInput' class='login-input' bindinput='infoInput' focus="{{focusPassword}}" password='true' placeholder='{{passwordHint}}' placeholder-class='placeholder-input' confirm-type="go" bindconfirm="login"></input>
  </view>

  <button class='login-btn' bindtap='login'>{{loginTxt}}
  </button>



</view>