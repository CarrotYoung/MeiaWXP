.list-item{
  /* margin: 20rpx 20rpx; */
  /* overflow: hidden; */
  position: relative;
  top: 1rpx;
  box-shadow: 0 0 16rpx 0 rgba(0,0,0,0.06);
  border-radius: 12rpx;
  height: 200rpx;
  display: flex;
  background-color: white;
  
  /* box-sizing:  */
}

.list-item-leftView{
  display:flex; 
  flex-direction:column; 
  background-color:#fff;
  width:200rpx;
  height:100%;
  margin-right:30rpx;
}

.list-item-rightView{
  display:flex; 
  flex-direction:column; 
   background-color:#fff; 
  /* height:100%; */
  box-sizing: content-box;
  flex:1;
  position: relative;
}

.room-text{
 font-family: PingFangSC-Medium;
 font-size: 60rpx;
 color: #45BC00;
 text-align: center;
 padding: 20rpx; 
 background-color: #fff;
}

.sign-status-text{
 font-family: PingFangSC-Regular;
 font-size: 25rpx;
 color: #45BC00;
 text-align: center;
 padding: 10rpx;
 background-color: #fff;

}

.room-type-text{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  margin-top: 10rpx;
  /* margin-right: 0rpx; */
  height: 45rpx;
  background-color: #fff;
  display:block;
 }

.title-text{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333333;

}


.sign-status-view{
   position: relative; 
   /* border-top: 10rpx; */
   /* border-top-color: red; */
   top: 5rpx;
   background-color: white;
   width: 100%; 
   height: 90rpx;
   display: flex; 
   flex-direction: row;  
   justify-content: center;     
 }  

 .sign-status-inter-view{
   background-color: white;
   width: 90%; 
   margin-left: 10rpx; 
   height: 100%;
   display: flex;
   flex-direction: row;  
   justify-content: space-around;  

 }

.allNum-text,.signNum-text,.unsignNum-text{
  position: relative; 
  width: 200rpx;
  height: 40rpx;
  margin-left: 10rpx; 
  top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 35rpx;
  color: #000000;
  padding: 10rpx 10rpx;

 }
 
.signNum-text{
  /* display: flex; */
