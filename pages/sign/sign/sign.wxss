 }
 
.unsignNum-text{
   color: #D82128;
 }

 .scan-bottom-view{
  /* position: relative; */
  margin-top: 3%;
  width: 100%;
  height: 68%; 
  background-color: white;

}

.scan-hint {
  width: 100%;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #666666;
  position: relative;
  top: 15%;
}



.scan-background {
  display: flex; 
  background-color: #D1EEC0; 
  width: 340rpx;
  height: 340rpx;
  border-radius: 170rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30%;
  align-items: center;
  justify-content: center;
}

.scan-button {
  position: relative;  
  width: 300rpx;
  height: 300rpx;
  background: #45BC00;  
  /* background-color: black;  */
  border-radius: 150rpx; 
  text-align: center;   
}

.scan-button image {
  width: 55rpx;
  height: 51rpx;
  margin-top: 100rpx;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  left: 35rpx;
}

.scan-button text {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 155rpx;
  position: relative;
  top: 50rpx;
  right: 26rpx;
}