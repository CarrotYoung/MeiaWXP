.sign-list{
  height: 90%;
  width: 100%;
  margin: auto;
  margin-top: 40rpx;
  background-color: whitesmoke;
  position: relative;
}


.list-item{
  margin:auto;
  overflow: hidden; 
  box-shadow: 0 0 16rpx 0 rgba(0,0,0,0.06);
  height: 200rpx;
  /* display: flex; */
  background-color: white;
  /* box-sizing:  */
}

.name-text{
 position: relative;
 font-family: PingFangSC-Medium;
 font-size: 32rpx;
 color: #333333;
 width: 100rpx;
 height: 45rpx;
 left: 30rpx;
 top: 30rpx;
}

.title-text{
 position: absolute;
 font-family: PingFangSC-Regular;
 font-size: 26rpx;
 color: #333333;
 width: 200rpx;
 height: 74rpx;
 left: 30rpx;
 margin-top: 90rpx;

}

.date-text{
 font-family: PingFangSC-Regular;
 font-size: 26rpx;
 color: #999999;
 width: 103rpx;
 height: 37rpx;
 position: absolute;
 right: 20rpx;
 top: 30rpx;
}
