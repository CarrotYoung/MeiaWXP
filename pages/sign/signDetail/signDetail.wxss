  top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 10rpx;
  text-align: center;
}

.center-left-line {
  position: absolute;
  left: 33%;
  top: 36%;
  width: 3rpx;
  height: 27rpx;
  background-color: #ebecf3;
}

.center-right-line {
  position: absolute;
  left: 66%;
  top: 36%;
  width: 3rpx;
  height: 27rpx;
  background-color: #ebecf3;
}

.bottom-line {
  position: absolute;
  background-color: #45bc00;
  height: 4rpx;
  width: 10%;
  left: 10%;
  bottom: 15%;
  border-radius: 100px;
}

