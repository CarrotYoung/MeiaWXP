.header-search-box input {
  border: 2rpx solid #ebecf3;
  box-shadow: inset 0 0 6rpx 0 rgba(0, 0, 0, 0.06);
  border-radius: 100rpx;
  position: relative;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 702rpx;
  height: 65rpx;
  background-color: #fff;
  text-align: center;
}

.sign-status-view {
  position: relative;
  /* border-top: 10rpx; *//* border-top-color: red; */
  top: 5rpx;
  background-color: white;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.sign-status-inter-view {
  background-color: white;
  width: 99%;
  margin-left: 10rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.allNum-text, .signNum-text, .unsignNum-text {
  position: relative;
  width: 33%;
  height: 40rpx;
  /* margin-left: auto;
