/* pages/sign/signDetail/signDetail.wxss */

.header-search-box {
  background-color: white;
  height: 98rpx;
  display: flex;
  justify-content: center;
}

 .header-input{
  border: 2rpx solid #EBECF3;
  box-shadow: inset 0 0 6rpx 0 rgba(0,0,0,0.06);
  border-radius: 100rpx;
  position: relative;
  margin-left: 10rpx;
  margin-right:10rpx;
  width: 100%;
  height: 80%;
  background-color: #fff;
  text-align: center;
} 



.sign-status-view{
   position: relative; 
   top: 1rpx;
   background-color: white;
   width: 100%; 
   height: 90rpx;
   display: flex; 
   flex-direction: row;  
   justify-content: center;     
 }  

.sign-status-inter-view{
   background-color: white;
   width: 90%; 
   margin-left: 10rpx; 
   height: 100%;
   display: flex;
   flex-direction: row;  
   justify-content: space-around;  

 }

.allNum-text,.signNum-text,.unsignNum-text{
  position: relative; 
  width: 200rpx;
  height: 40rpx;
  margin-left: 10rpx; 
  top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  padding: 10rpx 10rpx;
 }

.center-left-line{
   position:absolute;
   left: 31%;
   top: 36%;
   width:1rpx;
   height:27rpx;
   background-color:#EBECF3; 
 }

.center-right-line{
   position:absolute;
   left: 60%;
   top: 36%;
   width:1rpx;
   height:27rpx;
   background-color:#EBECF3;
 }

 .bottom-line{
  position: absolute;
  background-color: #45BC00;
  height: 4rpx;
  width: 100rpx;
  left: 10%;
  bottom: 15%;
  border-radius: 100px;

 }
 
/* .unsignNum-text{
   color: #D82128;
