.body {
  background: #fff;
}

.select-printer {
  height: 188rpx;
  width: 100%;
  background-color: white;
}

.select-printer text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000;
  letter-spacing: 0;
  position: relative;
  top: 20rpx;
  margin-left: 5%;
}

.select-printer .selector-detail {
  height: 76rpx;
  width: 90%;
  border: 2rpx solid #c4cbd2;
  border-radius: 4rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}

.selector-detail text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 0;
  flex: 1;
}

.selector-detail image {
  width: 16rpx;
  height: 10rpx;
  position: relative;
  right: 20rpx;
  top: 35rpx;
}

.scan-hint {
  width: 100%;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #666;
  margin-top: 18%;
}

#scan-area {
  display: flex;
  background: rgba(69, 188, 0, 0.06);
  width: 380rpx;
  height: 380rpx;
  border-radius: 190rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20%;
  align-items: center;
  justify-content: center;
}

.scan-background {
  display: flex;
  background: rgba(69, 188, 0, 0.20);
  width: 340rpx;
  height: 340rpx;
  border-radius: 170rpx;
  margin-left: auto;
  margin-right: auto;
  align-items: center;
  justify-content: center;
}

.scan-button {
  width: 300rpx;
  height: 300rpx;
  background: #45bc00;
  border-radius: 150rpx;
  text-align: center;
}

.scan-button image {
  width: 55rpx;
  height: 51rpx;
  margin-top: 100rpx;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  left: 35rpx;
}

.scan-button text {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #fff;
  margin-top: 155rpx;
  position: relative;
  top: 50rpx;
  right: 26rpx;
}

.bottom {
  position: absolute;
  width: 100%;
  text-align: center;
  bottom: 56rpx;
}

.all-attendees {
  width: 256rpx;
  height: 56rpx;
  background: #fff;
  border: 2rpx solid #ebecf3;
  border-radius: 100rpx;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  align-items: center;
}

.all-attendees text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999;
  margin-left: auto;
  margin-right: auto;
}

/* ----------------------自定义dialog---------------------- */

.free-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  height: 100%;
}

.free-dialog__container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 585rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.free-dialog--show .free-dialog__container {
  transform: translateY(0);
}

.free-dialog--show .free-dialog__mask {
  display: block;
}

/*模态框中的内容*/

.free-button {
  display: inline-block;
  width: 100%;
  height: 85rpx;
  text-align: center;
}

.free-button text {
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0;
  top: 10rpx;
}

.no-content {
  width: 100%;
  height: 500rpx;
  background: #f0eff5;
  display: flex;
  flex-direction: column;
}

.no-content image {
  width: 80rpx;
  height: 70.3rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 160rpx;
}

.no-content text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666;
  margin-top: 42rpx;
  margin-left: auto;
  margin-right: auto;
}

.printer-list {
  width: 100%;
  height: 500rpx;
  background: #fff;
}

.list-item {
  height: 95rpx;
  display: flex;
  align-items: center;
}

.list-item icon {
  height: 95rpx;
  width: 88rpx;
  text-align: center;
  position: relative;
  top: 18rpx;
  left: 15rpx;
}

.list-item text {
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #000;
  left: 88rpx;
}
