<view class="body">
  <view class="header">
    <image class="logo-img" src="{{ixdcLogoIc}}"></image>

    <view class='logout' bindtap='showPop'>
      <image class='avatar-img' src='{{avatarURL}}'></image>
      <image class='arrow-img' src='{{arrowImg}}'></image>
    </view>
  </view>

  <view class='logout-box' bindtap='logout' style= "display:{{!showPopWin?'none':'flex'}}">
    <text>退出</text>
  </view> 

  <view class='item' bindtap='toPrintCert'>
    <image src='{{printImg}}' mode='aspectFit'></image>
    <text>{{printTxt}}</text>
  </view>


  <view class='item' bindtap='signClick'>
    <image src='{{signInImg}}' mode= 'aspectFit'></image>
    <text>{{signInTxt}}</text>
  </view>
</view>
